generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id
  email    String
  name     String
  imageUrl String?

  isInnovator Boolean @default(false)
  isInvestor  Boolean @default(false)

  Innovator Innovator?
  Investor  Investor?
}

model Innovator {
  id           String  @id
  bio          String?
  linkedInLink String?
  role         String?

  user User @relation(fields: [id], references: [id])

  project Project[]
}

model Investor {
  id           String  @id
  address      String?
  companyName  String?
  jobProfile   String?
  linkedInLink String?
  industry     String?
  taxNumber    String?
  entity       String?

  user User @relation(fields: [id], references: [id])

  investment Investment?

  hiringOption HiringOption[]
}

model Investment {
  id          String  @id @default(cuid())
  value       Int // The value of the investment
  description String?

  Investor   Investor @relation(fields: [investorId], references: [id])
  investorId String   @unique
}

model HiringOption {
  id          String    @id @default(cuid())
  title       String
  price       Int
  description String?
  deadline    DateTime?

  Investor   Investor? @relation(fields: [investorId], references: [id])
  investorId String?
}

model Project {
  id           String  @id @default(uuid())
  name         String
  tools_used   String?
  imageUrl     String?
  progress     Int
  details      String
  project_type String  @default("other")
  project_link String?
  github_link  String?
  price        Int?
  sold         Boolean @default(false)

  Innovator   Innovator? @relation(fields: [innovatorId], references: [id])
  innovatorId String?
}
